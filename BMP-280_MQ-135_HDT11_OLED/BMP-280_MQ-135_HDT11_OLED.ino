void setup() {
  Serial.begin(115200);
  while ( !Serial ) delay(100);   // wait for native usb

  dht.begin(); // Start HDT11 sensor

  display.begin(SSD1306_SWITCHCAPVCC, 0x3C); // Start the OLED display
  display.clearDisplay();
  display.display();
  display.setTextColor(WHITE);

  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) {
    Serial.println(F("OLED SSD1306 allocation failed"));
    for(;;);
  }
  delay(1000);
  
  unsigned status;
  // status = bmp.begin(BMP280_ADDRESS_ALT, BMP280_CHIPID);
  status = bmp.begin();
  if (!status) {
    Serial.println(F("Could not find a valid BMP280 sensor, check wiring or try a different address!"));
    Serial.println("SensorID was: 0x" + String(bmp.sensorID(),16));
    while (1) delay(10);
  }

  /* Default settings from datasheet. */
  bmp.setSampling(Adafruit_BMP280::MODE_NORMAL,     /* Operating Mode. */
                  Adafruit_BMP280::SAMPLING_X2,     /* Temp. oversampling */
                  Adafruit_BMP280::SAMPLING_X16,    /* Pressure oversampling */
                  Adafruit_BMP280::FILTER_X16,      /* Filtering. */
                  Adafruit_BMP280::STANDBY_MS_500); /* Standby time. */
          
  display.clearDisplay();
  display.drawBitmap(0, 0, myBitmap, 128, 64, 1);
  display.display();
  delay(5000);
  display.clearDisplay();
}

void loop() {

  float T = bmp.readTemperature(); //Read temperature in C
  float P = bmp.readPressure()*0.007500615613026; // 1 pascal is equal to 0.0075006156130264 mmHg.
  float A = bmp.readAltitude(1010);

  int hd = dht.readHumidity();
  int td = dht.readTemperature();

  float PPM = mq135_sensor.getCorrectedPPM(td, td);

  if (isnan(hd) || isnan(td)) {
    Serial.println("Failed to read from DHT sensor!");
    return;
  }

  Serial.println("T: " + String(td));
  Serial.println("H: " + String(hd));

  Serial.println("PPM: " + String(PPM));

  Serial.print(F("Temperature = "));
  Serial.print(T);
  Serial.println(" *C");

  Serial.print(F("Pressure = "));
  Serial.print(P);
  Serial.println(" mmHg");

  Serial.print(F("Pressure = "));
  Serial.print(bmp.readPressure());
  Serial.println(" Pa");

  Serial.print(F("Approx altitude = "));
  Serial.print(A);
  Serial.println(" m");

  Serial.println();

  // *************************** //

  display.clearDisplay();
  display.setCursor(0,0);
  display.setTextColor(WHITE);

  // HW-611 (BMP-280 Data)
  // Temperature
  display.setTextSize(1);
  display.setCursor(0,0);
  display.print("Tmp: " + String(T,1) + "C");

  // Pressure
  display.setTextSize(1);
  display.setCursor(0,10);
  display.print("Pressure:");
  
  display.setTextSize(1);
  display.setCursor(0,20);
  display.print(String(P,1) + "mmHg");

  // Altitude
  display.setTextSize(1);
  display.setCursor(0,30);
  display.print("Alt: " + String(A,1) + "m");

  // DHT11 Data
  // Temperature
  display.setTextSize(1);
  display.setCursor(65,0);
  display.print("Tmp: " + String(td) + "C");

  // Humidity
  display.setTextSize(1);
  display.setCursor(65,10);
  display.print("Hmdt: " + String(hd) + "%");

  // MQ-135 Data
  display.setTextSize(1);
  display.setCursor(65,20);
  display.print("PPM: " + String(PPM));
  
  display.display();
  display.clearDisplay();

  delay(2000);
}
